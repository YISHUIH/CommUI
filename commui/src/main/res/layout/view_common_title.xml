<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/reg_title_left_tx"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/theme_text_black"
        android:textColorHint="@color/theme_text_theme"
        android:textSize="18sp"
        android:visibility="gone"
        android:background="@drawable/selec_transparent_grey"/>

    <ImageView
        android:id="@+id/img_title_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/selector_title_back_arrow"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        android:background="@drawable/selec_transparent_grey"/>

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/theme_text_black"
        android:textColorHint="@color/theme_text_theme"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/title_sub_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center"
        tools:ignore="ContentDescription"
        android:background="@drawable/selec_transparent_grey" />

    <ImageView
        android:id="@+id/title_descp_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center"
        tools:ignore="ContentDescription"
        android:background="@drawable/selec_transparent_grey"/>

    <TextView
        android:id="@+id/reg_title_right_tx"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/app_title_register"
        android:textColor="@color/theme_text_black"
        android:textColorHint="@color/theme_text_theme"
        android:textSize="18sp"
        android:visibility="gone"
        android:background="@drawable/selec_transparent_grey"/>

</LinearLayout>