<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vaccine_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_text_black"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/vaccine_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/vaccine_name_tv"
            android:textColor="@color/theme_text_black"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/vaccine_effect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vaccine_name_tv"
            android:layout_marginTop="10dp"
            android:textColor="@color/theme_text_grey"
            android:layout_marginRight="80dp"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/vaccine_have_to_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_have_to" />

</RelativeLayout>