<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/il_date_choose_title"
        layout="@layout/view_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vaccine_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/theme_text_black"
                android:textSize="@dimen/large_text_size"
                android:background="#ebfcff"/>
            <TextView
                android:id="@+id/vaccine_count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:background="#ebfcff"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:text="疫苗简介"/>
            <TextView
                android:id="@+id/vaccine_briefing_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:background="@color/white"
                android:textSize="@dimen/normal_text_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2px"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:text="预防疾病"/>
            <TextView
                android:id="@+id/vaccine_effect_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:background="@color/white"
                android:textSize="@dimen/normal_text_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2px"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:text="接种对象和时间"/>
            <TextView
                android:id="@+id/vaccine_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:background="@color/white"
                android:textSize="@dimen/normal_text_size"/>
            <TextView
                android:id="@+id/vaccine_considerations_tv_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2px"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:text="注意事项"
                android:background="@color/white"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/vaccine_considerations_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/vaccine_nursing_tv_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2px"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:text="接种后的护理"
                android:background="@color/white"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/vaccine_nursing_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/vaccine_reminder_tv_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2px"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:text="温馨提示"
                android:background="@color/white"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/vaccine_reminder_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/vaccine_replace_tv_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="2px"
                android:textColor="@color/theme_text_grey"
                android:textSize="@dimen/normal_text_size"
                android:text="另一种选择"
                android:background="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/vaccine_replace_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text_black"
                android:textSize="@dimen/normal_text_size"
                android:background="@color/white"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>